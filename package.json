    "next-pwa": "^5.6.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hotkeys-hook": "^4.5.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.2",
    "ts-key-enum": "^3.0.13"
